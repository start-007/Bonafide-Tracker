<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/styles.css">
  <title>Requests</title>
</head>
<body>
  <form action="/admin/requests/closed" method="get">
    <button type="submit" value="Closed" id="closedreqbtn">Closed Requests</button>
  </form>
  <form action="/admin/requests/opened" method="get">
    <button type="submit" value="Closed" id="openedreqbtn">Opened Requests</button>
  </form>
  <h1><%= Value?"Closed Requests":"Opened Requests"%></h1>
  <div class="requests-container">
      <ul>
        <% for(var l = Requests.length, i = 0; i < l; i++) { %>
          
          <li>
            <div class="card">
                <% if(CountArr[i]){ %>
                  <label for="name">Name: </label> <h5 id="name"><%=Requests[i].name %></h5>
                  <label for="rollnum">Roll Number: </label> <h5 id="rollnum"><%=Requests[i].rollno %></h5>
                  <label for="year">Year: </label> <h5 id="year"><%=Requests[i].year %></h5>
                  <label for="dept">Branch: </label> <h5 id="dept"><%=Requests[i].department %></h5>
                  <label for="purpose">Purposes: </label>   
                <% } %>
              
                <%Requests[i].purposes.forEach((purpose)=>{%>
                  <% if (purpose.isissued===Value) { %>
                    
                    <label for="name">Purpose Category: <h5 id="purpose"><%=purpose.purposename %></h5>
                      <label for="name">Request date: <h5 id="purpose"><%=purpose.requestdate %></h5>
                      <label for="name">Issued Date: <h5 id="purpose"><%=purpose.issueddate?purpose.issueddate:"Not yet issued" %></h5>
                      <label for="name">Issued:<h5 id="purpose"><%=purpose.isissued %></h5>
                      <% if(Value===0){ %>

                        <form action="/admin/request/issued" method="post">
                          <button type="submit" name="submitbutton" value="<%=Requests[i].rollno%> <%=purpose.purposename%>">Close Request & Mark as issued</button>
                        </form>

                      <% } %>
                      
                  <% } %>
                 
                <% }); %>
                
            </div>
        </li>
       
        <% } %>
          
          
      </ul>
  </div>
</body>
</html>