  //       document.getElementById("finedreqtab").classList.remove("active");
  //   }
  //   const finedTab=()=>{
  //       document.getElementById("finedreqtab").classList.add("active");
  //       document.getElementById("closedreqtab").classList.remove("active");
  //   }
</script>
</html>
